<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Products</servlet-name>
        <servlet-class>Products</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDescription</servlet-name>
        <servlet-class>ProductDescription</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Checkout</servlet-name>
        <servlet-class>Checkout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionTracking</servlet-name>
        <servlet-class>SessionTracking</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddViewerTracking</servlet-name>
        <servlet-class>AddViewerTracking</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveViewerTracking</servlet-name>
        <servlet-class>RemoveViewerTracking</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Products</servlet-name>
        <url-pattern>/Products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDescription</servlet-name>
        <url-pattern>/ProductDescription</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Checkout</servlet-name>
        <url-pattern>/Checkout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionTracking</servlet-name>
        <url-pattern>/SessionTracking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddViewerTracking</servlet-name>
        <url-pattern>/AddViewerTracking</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveViewerTracking</servlet-name>
        <url-pattern>/RemoveViewerTracking</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            15
        </session-timeout>
    </session-config>
</web-app>
